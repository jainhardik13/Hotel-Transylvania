  <style>
    /* Background gradient with black and purple */
    .bg-gradient {
      background: linear-gradient(to bottom right, #2c003e, #4b0082, #000000);
    }

    /* Button Hover Effect */
    .button-hover:hover {
      background: #ff5e62; /* Stylish color transition */
      box-shadow: 0 8px 20px rgba(255, 94, 98, 0.4);
    }

    /* Stylish Header */
    h1 {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #ed3b79, #f35ccf, #825bc2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* Hotel Card Styling */
    .hotel-card {
      background: rgba(0, 0, 0, 0.5);
      border-radius: 1.25rem;
      padding: 20px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      overflow: hidden;
    }

    .hotel-card:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    }

    .hotel-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 1.25rem;
      transition: transform 0.3s ease, filter 0.3s ease;
    }

    .hotel-image:hover {
      transform: scale(1.1);
      filter: brightness(80%);
    }

    /* Title text animations */
    .fade-in {
      opacity: 0;
      animation: fadeIn 1s forwards;
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    /* Sticky Navigation */
    .sticky-nav {
      position: sticky;
      top: 0;
      z-index: 10;
    }

    /* Custom fonts */
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap');
    body {
      font-family: 'Roboto', sans-serif;
    }

    h1, h2, h3 {
      font-family: 'Poppins', sans-serif;
    }

    /* Image Gallery Styling */
    .gallery-image {
      border-radius: 2rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease;
    }

    .gallery-image:hover {
      transform: scale(1.05);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    }

    .gallery-grid img {
      margin-bottom: 16px; /* Consistent spacing */
    }
  </style>
</head>

